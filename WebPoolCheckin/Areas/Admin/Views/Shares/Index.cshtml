@model IEnumerable<WebPoolCheckin.Models.Share>

@{
    ViewBag.Title = "Shares";
}

<h2>Shares</h2>

<a href="~/Report">Return to Index</a>

<table class="table table-striped table-hover">
    <tr>
        <th>
           Family Name
        </th>
        <th>
            Share No
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.Address2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paid_Dues)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShareFamilies.Single().Family.FamilyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.Address2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paid_Dues)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
