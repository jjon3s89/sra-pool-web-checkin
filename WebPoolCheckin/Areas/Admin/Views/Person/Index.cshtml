@model IEnumerable<WebPoolCheckin.Models.Person>

@{
    ViewBag.Title = "Index";
}

    @using (Html.BeginForm())
    {
        <div style="width:50em; margin:auto; text-align:center">
            <h3>Search People by Name</h3>
            @Html.TextBox("Filter", "", new { @class = "input-large search-query" })
            <br />
            <br />
            <div>
                <button style="width:10em" class="btn btn-primary">Go</button>
                <br />
                <a href="~/Report">Return to Index</a>

            </div>
            @Html.ValidationSummary()
        </div>
    }

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayName("Share")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family.FamilyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyMemberType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is_Guest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is_Minor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Needs_Adult)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if(item.Family.ShareFamilies.Any() && item.Family.ShareFamilies.Single().Share != null){
                @Html.DisplayFor(modelItem => item.Family.ShareFamilies.First().Share.Id)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family.FamilyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyMemberType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_Guest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_Minor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Needs_Adult)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

    </table>
