@model IEnumerable<WebPoolCheckin.Models.Person>

@{
    ViewBag.Title = "Index";
}

    <h2>People</h2>

    @using (Html.BeginForm())
    {
        <div style="width:50em; margin:auto; text-align:center">
            <h3>Search by Name</h3>
            @Html.TextBox("Filter", "", new { @class = "input-large search-query" })
            <br />
            <br />
            <div>
                <button style="width:10em" class="btn btn-primary">Go</button>
            </div>
        </div>
    }

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmergencyContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmergencyContactPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family.FamilyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyMemberType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is_Guest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is_Minor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Needs_Adult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmergencyContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmergencyContactPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family.FamilyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyMemberType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_Guest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_Minor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Needs_Adult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

    </table>
