@model IEnumerable<WebPoolCheckin.Models.ShareFamily>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") | 
    <a href="~/Report">Return to Index</a>
</p>

<table class="table table-striped table-hover">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Share.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family.FamilyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShareUserType.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Share.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Family.FamilyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShareUserType.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
